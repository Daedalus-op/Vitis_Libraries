{
  "low_level_file":"dds_mixer.json",
  "ip_name": "vmc_dds",
  "block_info": {
    "label": "DDS",
    "description": "Direct Digital Synthesizer (DDS) block targeted for AI Engines."
  },
  "parameters": [
    {
      "key": "TT_DATA",
      "name": "data_type",
      "description": "The type of individual data samples output of the DDS function",
      "default": "cint16",
      "blockgui":{
          "label": "Output data type:",
          "tablabel": "Main",
          "parameterType":"popup"
         
        }
    },
    {
      "key": "TP_INPUT_WINDOW_VSIZE",
      "name": "output_window_size",
      "description": "The number of samples in output window",
      "default": 32,
      "validator": {
        "file": "vmc_dds.py",
        "function": "vmc_validate_output_window_size",
        "args": ["data_type"]
      },
      "blockgui":{
            "label": "Samples per frame:",
            "tablabel": "Main",
            "parameterType":"edit"
      }
    },
	{
	  "key": "TP_SSR",
      "name": "ssr",
      "description": "Specify number of data input/output in parallel for a single channel.",
      "default": 1,
      "validator": {
        "file": "vmc_dds.py",
        "function": "vmc_validate_ssr",
        "args": []  
      },
      "blockgui":{
            "label": "Number of parallel outputs ports(SSR):",
            "tablabel": "Main",
            "parameterType":"edit"
      }
    },
    {
	  "key": "phaseInc",
      "name": "phase_increment",
      "description": "The phase increment between samples.",
      "default": 0,
      "blockgui":{
          "label": "Phase increment:",
          "tablabel": "Main",
          "parameterType":"edit"
         
        }
    },
    {
	  "name": "vmc_sample_time",
      "description": "Sample time for the block output port(s)",
      "default": -1,
      "type": "double",
      "blockgui":{
          "label": "Sample time:",
          "tablabel": "Main",
          "parameterType":"edit"
         }
    }
    
  ],
  "generator": {
    "file": "vmc_dds.py",
    "function": "vmc_generate_graph"
  }
}
